<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextSide"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSide"
            app:layout_constraintStart_toStartOf="@+id/textViewSide"
            app:layout_constraintEnd_toEndOf="@+id/textViewSide" app:layout_constraintHorizontal_bias="1.0"
    />
    <TextView
            android:text="@string/textSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSize" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="@string/textSeparator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSeparator"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSize"
            app:layout_constraintStart_toEndOf="@+id/editTextRoomX"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextRoomX"
            app:layout_constraintTop_toBottomOf="@+id/textViewSize"
            android:layout_marginTop="8dp"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="72dp"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextRoomY"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewSize"
            app:layout_constraintStart_toEndOf="@+id/textViewSeparator" android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"/>
    <TextView
            android:text="@string/textSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewSide"
            app:layout_constraintTop_toBottomOf="@+id/editTextStartX"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <TextView
            android:text="@string/textController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewController"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewSide"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.872"
            app:layout_constraintTop_toBottomOf="@+id/editTextStartY" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextPath"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewController" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewController" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/textViewController"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="@string/btnStart"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnStart"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnExOne"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnExTwo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTry"/>
    <Button
            android:text="@string/btnExOne"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnExOne" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTry"
    />
    <Button
            android:text="@string/btnExTwo"
            android:textAllCaps="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnExTwo"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTry"
    />
    <TextView
            android:text="@string/textTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTry" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPath" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
    />
    <TextView
            android:text="@string/textX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewX"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/editTextStartX"
            app:layout_constraintStart_toStartOf="@+id/textViewStart" android:layout_marginLeft="44dp"
            android:layout_marginStart="44dp"/>
    <TextView
            android:text="@string/textY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewY"
            app:layout_constraintStart_toEndOf="@+id/editTextStartX"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="@+id/editTextStartY"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextStartX"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewStart" app:layout_constraintStart_toEndOf="@+id/textViewX"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextStartY"
            app:layout_constraintTop_toBottomOf="@+id/textViewStart"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/textViewY" android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="@string/textStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewStart"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="52dp"
            android:layout_marginRight="52dp"/>
</android.support.constraint.ConstraintLayout>